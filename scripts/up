#!/usr/bin/env bash
set -eo pipefail

# For now, just run `yarn sls offline` in another terminal
SCRIPT_DIR="$(dirname "$0")"

function getNgrokUrl() {
  local result
  curl --fail --silent http://127.0.0.1:4040/api/tunnels > /dev/null

  if [ $? -ne 0 ]; then
    ngrok http 3000 > /dev/null &
  fi

  curl --silent http://127.0.0.1:4040/api/tunnels \
    | jq -r '.tunnels | .[] | select(.proto == "https") | .public_url'
}

yarn build
WEBHOOK_URL="$(getNgrokUrl)/dev"
source "${SCRIPT_DIR}/telegram-set-webhook-url"

yarn sls offline
