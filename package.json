{
  "name": "telegram-wordle-bot",
  "version": "1.0.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "description": "Telegram bot for saving, sharing, and comparing wordle scores",
  "main": "dist/index.js",
  "repository": "git@github.com:rperryng/telegram-wordle-bot.git",
  "author": "Ryan Perry-Nguyen <ryanperrynguyen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build:local": "yarn tsc",
    "build:production": "yarn ncc build src/index.ts",
    "deploy": "yarn clean && yarn build:production && yarn serverless deploy",
    "clean": "rm -rf dist",
    "lint": "yarn eslint --fix ."
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.47.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "lodash.sortby": "^4.7.0",
    "lodash.sumby": "^4.6.0",
    "luxon": "^2.3.0",
    "serverless-http": "^2.7.0",
    "telegraf": "^4.6.0",
    "winston": "^3.4.0",
    "zod": "^3.11.6"
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0.1",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/lodash.sortby": "^4.7.6",
    "@types/lodash.sumby": "^4.6.6",
    "@types/luxon": "^2.0.9",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vercel/ncc": "^0.33.1",
    "eslint": "^8.6.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "node-fetch": "^3.1.0",
    "prettier": "^2.5.1",
    "serverless": "^2.71.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-offline": "^8.3.1",
    "serverless-plugin-typescript": "^2.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
